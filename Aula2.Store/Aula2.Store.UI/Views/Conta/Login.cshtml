@model Aula2.Store.UI.ViewModels.Conta.Login.LoginVM

@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>

<div class="row">

    <form class="col-md-6 col-sm-12" method="post">
        <div class="form-group">
            <label>E-mail</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", autofocus = "" })

            <small>
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="form-group">
            <label>Senha</label>
            @Html.PasswordFor(model => model.Senha, new { @class = "form-control", autofocus = "" })
            <small>
                @Html.ValidationMessageFor(model => model.Senha, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="form-group form-check">
            @Html.CheckBoxFor(model => model.PermanecerLogado, new { @class = "form-check-input" })
            @*<label>Salvar Senha</label>*@
            @Html.LabelFor(model => model.PermanecerLogado)
        </div>

        <div class="form-group">
            <button class="btn btn-outline-secondary">Entrar</button>
            <a class="btn btn-outline-warning" href="@Url.Action("Index", "Home")">Cancelar</a>
        </div>
    </form>
</div>
<!--aqui sera inserido na renderização do _Layout, instalar o Nuget Microsof.jQuery.Unobtrusive.Validation-->
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
}